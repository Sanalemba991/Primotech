---
// Footer.astro
---

<footer class="bg-gray-600 text-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Products Section -->
      <div class="group">
        <h3 class="text-white text-lg font-semibold mb-6">
          Products
        </h3>
        <ul class="space-y-4">
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/e-shop-products" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              E-Shop Products
            </a>
          </li>
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/smart-office" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              Smart Office
            </a>
          </li>
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/products" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              Products
            </a>
          </li>
        </ul>
      </div>

      <!-- Support Section -->
      <div class="group">
        <h3 class="text-white text-lg font-semibold mb-6">
          Support
        </h3>
        <ul class="space-y-4">
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/software" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              Software
            </a>
          </li>
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/faq" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              FAQ
            </a>
          </li>
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/download" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              Download
            </a>
          </li>
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/video" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              Video
            </a>
          </li>
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/tips" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              Tips & Guides
            </a>
          </li>
        </ul>
      </div>

      <!-- About Us Section -->
      <div class="group">
        <h3 class="text-white text-lg font-semibold mb-6">
          About Us
        </h3>
        <ul class="space-y-4">
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/company-profile" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              Company Profile
            </a>
          </li>
          <li class="transform hover:translate-x-2 transition-all duration-300">
            <a href="/contact-us" class="text-gray-200 hover:text-white transition-colors duration-200 flex items-center group">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-3 opacity-0 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></span>
              Contact Us
            </a>
          </li>
        </ul>
      </div>

      <!-- Follow Us Section -->
      <div class="group">
        <h3 class="text-white text-lg font-semibold mb-6">
          Follow Us
        </h3>
        <div class="flex space-x-4">
          <!-- Twitter -->
          <a href="#" class="text-gray-200 hover:text-white transition-all duration-300 transform hover:scale-125 hover:rotate-6 hover:-translate-y-1 group">
            <span class="sr-only">Twitter</span>
            <div class="relative">
              <svg class="h-6 w-6 transition-all duration-300 group-hover:drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
