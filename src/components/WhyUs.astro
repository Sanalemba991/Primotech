<style>
/* Section base animation */
.scroll-features-section {
  opacity: 0;
  transform: translateY(60px);
  transition: all 1.2s cubic-bezier(0.23, 1, 0.32, 1);
}

.scroll-features-section.in-view {
  opacity: 1;
  transform: translateY(0);
}

/* Badge hover animation only */
.hover-badge {
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  cursor: pointer;
}

.hover-badge:hover {
  transform: scale(1.1) translateY(-2px);
  box-shadow: 0 10px 20px rgba(82, 179, 201, 0.2);
  background: linear-gradient(135deg, #52b3c9, #7cc5d4);
  color: white;
}

.hover-badge:hover svg {
  transform: rotate(360deg);
  transition: transform 0.5s ease;
}

/* Title animation */
.title-reveal {
  opacity: 0;
  transform: translateY(40px);
  transition: all 0.9s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.scroll-features-section.in-view .title-reveal {
  opacity: 1;
  transform: translateY(0);
  transition-delay: 0.2s;
}

/* Subtitle animation */
.subtitle-reveal {
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.scroll-features-section.in-view .subtitle-reveal {
  opacity: 1;
  transform: translateY(0);
  transition-delay: 0.3s;
}

/* Card animations with staggered timing */
.card-reveal {
  opacity: 0;
  transform: translateY(50px) rotateX(10deg);
  transition: all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.scroll-features-section.in-view .card-reveal:nth-child(1) {
  opacity: 1;
  transform: translateY(0) rotateX(0deg);
  transition-delay: 0.4s;
}

.scroll-features-section.in-view .card-reveal:nth-child(2) {
  opacity: 1;
  transform: translateY(0) rotateX(0deg);
  transition-delay: 0.5s;
}

.scroll-features-section.in-view .card-reveal:nth-child(3) {
  opacity: 1;
  transform: translateY(0) rotateX(0deg);
  transition-delay: 0.6s;
}

/* Consistent hover effects for all cards */
.card-reveal:hover {
  transform: translateY(-8px) scale(1.02);
  background: linear-gradient(135deg, rgba(82, 179, 201, 0.05), rgba(82, 179, 201, 0.1));
  border-radius: 12px;
  box-shadow: 0 10px 30px rgba(82, 179, 201, 0.15);
}
</style>

<script>
// Enhanced intersection observer for features section
const featuresObserverOptions = {
  threshold: [0, 0.2, 0.4, 0.6],
  rootMargin: '0px 0px -80px 0px'
};

const featuresObserver = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    const section = entry.target;
    
    if (entry.isIntersecting && entry.intersectionRatio > 0.2) {
      // Add smooth class addition with professional timing
      setTimeout(() => {
        section.classList.add('in-view');
      }, 150);
      
      // Stop observing once animated
      featuresObserver.unobserve(section);
    }
  });
}, featuresObserverOptions);

// Initialize features section
document.addEventListener('DOMContentLoaded', () => {
  const featuresSection = document.querySelector('.scroll-features-section');
  if (featuresSection) {
    featuresObserver.observe(featuresSection);
  }
});
</script>