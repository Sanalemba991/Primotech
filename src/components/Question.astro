<section class="py-0 min-h-screen flex items-stretch bg-gray-50 overflow-hidden animate-section">
  <div class="w-full h-screen flex">
    
    <!-- Left side - Full height image -->
    <div class="w-full lg:w-1/2 image-animation relative">
      <img 
        src="/images/lasthome.png" 
        alt="Customer support representative with headset ready to help" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-transparent to-black/10"></div>
    </div>
    
    <!-- Right side - Content -->
    <div class="w-full lg:w-1/2 flex items-center justify-center content-animation bg-gray-50">
      <div class="max-w-lg px-8 lg:px-12">
        <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Got questions?
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Get all the help you need here
        </p>
        
        <a 
          href="/support" 
          class="inline-flex items-center text-teal-500 hover:text-teal-600 font-semibold text-lg group"
        >
          Learn more 
          <span class="ml-2 transition-transform duration-300 group-hover:translate-x-2 inline-block text-lg">â†’</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
/* Content slides from right */
.content-animation {
  transform: translateX(80px);
  opacity: 0;
  transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Image slides from left */
.image-animation {
  transform: translateX(-80px);
  opacity: 0;
  transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transition-delay: 0.2s;
}

/* Trigger animations when section is in view */
.animate-section.in-view .content-animation {
  transform: translateX(0);
  opacity: 1;
}

.animate-section.in-view .image-animation {
  transform: translateX(0);
  opacity: 1;
}

/* Mobile responsiveness */
@media (max-width: 1024px) {
  .animate-section .w-full.lg\\:w-1\\/2 {
    width: 100%;
  }
  
  .animate-section .w-full.h-screen.flex {
    flex-direction: column;
  }
  
  .image-animation {
    min-height: 50vh;
  }
  
  .content-animation {
    min-height: 50vh;
    transform: translateY(50px);
  }
  
  .animate-section.in-view .content-animation {
    transform: translateY(0);
  }
}
</style>

<script>
// Enhanced intersection observer for better performance
const questionObserverOptions = {
  threshold: [0, 0.2, 0.5],
  rootMargin: '0px 0px -150px 0px'
};

const questionObserver = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    const section = entry.target;
    
    if (entry.isIntersecting && entry.intersectionRatio > 0.2) {
      // Add smooth animation trigger
      setTimeout(() => {
        section.classList.add('in-view');
      }, 100);
      
      // Stop observing once animated
      questionObserver.unobserve(section);
    }
  });
}, questionObserverOptions);

// Initialize question section animation
document.addEventListener('DOMContentLoaded', () => {
  const questionSection = document.querySelector('.animate-section');
  if (questionSection) {
    questionObserver.observe(questionSection);
  }
});
</script>