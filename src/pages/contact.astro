---
import Layout from "../layouts/Layout.astro";
import Whatsapp from "../components/Whatsapp.tsx";
const title = "Contact Us - PrimoTech LLC";
const description = "Get in touch with PrimoTech LLC for all your security technology needs. Contact our sales team or technical support.";
---

<Layout title={title} description={description}>
<main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[60vh] lg:h-[70vh] overflow-hidden contact-hero">
        <!-- Background Image -->
        <div class="absolute inset-0">
            <img 
                src="/images/contactus.png" 
                alt="Modern office space with people working" 
                class="w-full h-full object-cover hero-image-reveal"
            />
            <div class="absolute inset-0 bg-black/40 hero-overlay-fade"></div>
            <div class="absolute inset-0 bg-gradient-to-r from-teal-900/80 to-transparent hero-overlay-fade"></div>
        </div>

        <!-- Hero Content -->
        <div class="relative z-10 flex items-center h-full">
            <div class="container mx-auto px-6 lg:px-8">
                <div class="max-w-2xl hero-content-reveal">
                    <h1 class="text-5xl lg:text-7xl font-bold text-white mb-6 hero-title-animate">
                        CONTACT US
                    </h1>
                    <p class="text-xl lg:text-2xl text-gray-200 mb-4 hero-subtitle-animate">
                        We'd like to hear from you,
                    </p>
                    <p class="text-lg lg:text-xl text-gray-300 mb-8 hero-description-animate">
                        ready to transform your business with cutting-edge technology solutions.
                    </p>
                    
                    <!-- Professional Contact Button -->
                    <div class="hero-button-animate">
                        <a 
                            href="#contact-form"
                            class="inline-flex items-center px-6 py-3 bg-transparent border-2 border-teal-400 text-teal-400 hover:bg-teal-400 hover:text-white font-semibold text-base rounded-full transition-all duration-300 group transform hover:scale-105 hover:shadow-lg"
                        >
                            Contact Us
                            <svg class="ml-2 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Options Section -->
    <section class="py-16 bg-gradient-to-b from-white to-slate-50 contact-options-section">
        <div class="container mx-auto px-6 lg:px-8">
            <div class="text-center mb-12">
                <div class="inline-flex items-center px-3 py-1.5 bg-teal-100 text-teal-800 rounded-full text-sm font-medium mb-3 contact-badge-animate">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                    </svg>
                    Multiple Ways to Connect
                </div>
                <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4 contact-title-animate">
                    Talk to Sales
                </h2>
                <p class="text-lg text-slate-600 max-w-2xl mx-auto contact-description-animate">
                    Choose the best way to reach our team. We're here to provide personalized solutions 
                    and answer all your questions about our services.
                </p>
            </div>
                
            <!-- Professional Contact Cards -->
            <div class="grid lg:grid-cols-3 gap-6 mb-16 max-w-6xl mx-auto">
                <div class="group bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-1 contact-card-animate border border-slate-100" data-card-index="0">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 mb-3">General Inquiries</h3>
                    <p class="text-slate-600 mb-6 text-sm leading-relaxed">Have questions about our products or services? Our team is ready to provide detailed information and guidance.</p>
                    <a href="mailto:info@primotechllc.com" 
                       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-medium text-sm rounded-lg transition-all duration-300 transform hover:-translate-y-0.5">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        Send Email
                    </a>
                </div>
                
                <div class="group bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-1 contact-card-animate border border-slate-100" data-card-index="1">
                    <div class="w-12 h-12 bg-gradient-to-br from-teal-500 to-teal-600 rounded-lg flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 mb-3">Sales Team</h3>
                    <p class="text-slate-600 mb-6 text-sm leading-relaxed">Ready to get started? Connect with our sales team for personalized solutions tailored to your business needs.</p>
                    <a href="tel:+1-555-PRIMO-TECH" 
                       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-teal-600 to-teal-700 hover:from-teal-700 hover:to-teal-800 text-white font-medium text-sm rounded-lg transition-all duration-300 transform hover:-translate-y-0.5">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                        Call Sales
                    </a>
                </div>
                
                <div class="group bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-1 contact-card-animate border border-slate-100" data-card-index="2">
                    <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-lg flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 11-9.75 9.75A9.75 9.75 0 0112 2.25z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 mb-3">Technical Support</h3>
                    <p class="text-slate-600 mb-6 text-sm leading-relaxed">Need technical assistance? Our expert support team is available 24/7 to help resolve any issues quickly.</p>
                    <a href="/support" 
                       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white font-medium text-sm rounded-lg transition-all duration-300 transform hover:-translate-y-0.5">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 11-9.75 9.75A9.75 9.75 0 0112 2.25z"/>
                        </svg>
                        Get Support
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Professional Contact Form Section -->
    <section class="py-16 bg-white contact-form-section" id="contact-form">
        <div class="container mx-auto px-6 lg:px-8">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-12">
                    <div class="inline-flex items-center px-3 py-1.5 bg-slate-100 text-slate-800 rounded-full text-sm font-medium mb-3 form-badge-animate">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                        
                    </div>
                    <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4 form-title-animate">
                        Get In Touch
                    </h2>
                    <p class="text-lg text-slate-600 max-w-2xl mx-auto form-description-animate">
                        Ready to discuss your project? Fill out the form below and we'll respond within 24 hours 
                        with a personalized consultation.
                    </p>
                </div>

                <div class="bg-gradient-to-br from-slate-50 to-blue-50 rounded-2xl p-8 shadow-lg border border-slate-200 form-container-animate">
                    <form class="space-y-6" id="contactForm">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="form-field-animate" data-delay="100">
                                <label for="firstName" class="block text-sm font-medium text-slate-900 mb-2">
                                    First Name *
                                </label>
                                <input 
                                    type="text" 
                                    id="firstName" 
                                    name="firstName" 
                                    required
                                    class="w-full px-3 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 bg-white text-slate-900 hover:border-teal-300"
                                    placeholder="Enter your first name"
                                >
                            </div>
                            <div class="form-field-animate" data-delay="200">
                                <label for="lastName" class="block text-sm font-medium text-slate-900 mb-2">
                                    Last Name *
                                </label>
                                <input 
                                    type="text" 
                                    id="lastName" 
                                    name="lastName" 
                                    required
                                    class="w-full px-3 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 bg-white text-slate-900 hover:border-teal-300"
                                    placeholder="Enter your last name"
                                >
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="form-field-animate" data-delay="300">
                                <label for="email" class="block text-sm font-medium text-slate-900 mb-2">
                                    Email Address *
                                </label>
                                <input 
                                    type="email" 
                                    id="email" 
                                    name="email" 
                                    required
                                    class="w-full px-3 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 bg-white text-slate-900 hover:border-teal-300"
                                    placeholder="your.email@company.com"
                                >
                            </div>
                            <div class="form-field-animate" data-delay="400">
                                <label for="phone" class="block text-sm font-medium text-slate-900 mb-2">
                                    Phone Number
                                </label>
                                <input 
                                    type="tel" 
                                    id="phone" 
                                    name="phone"
                                    class="w-full px-3 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 bg-white text-slate-900 hover:border-teal-300"
                                    placeholder="+1 (555) 123-4567"
                                >
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="form-field-animate" data-delay="500">
                                <label for="company" class="block text-sm font-medium text-slate-900 mb-2">
                                    Company Name
                                </label>
                                <input 
                                    type="text" 
                                    id="company" 
                                    name="company"
                                    class="w-full px-3 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 bg-white text-slate-900 hover:border-teal-300"
                                    placeholder="Your Company Name"
                                >
                            </div>
                            <div class="form-field-animate" data-delay="600">
                                <label for="subject" class="block text-sm font-medium text-slate-900 mb-2">
                                    Subject *
                                </label>
                                <select 
                                    id="subject" 
                                    name="subject" 
                                    required
                                    class="w-full px-3 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 bg-white text-slate-900 hover:border-teal-300"
                                >
                                    <option value="">Select inquiry type</option>
                                    <option value="sales">Sales Inquiry</option>
                                    <option value="support">Technical Support</option>
                                    <option value="partnership">Partnership Opportunity</option>
                                    <option value="general">General Question</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-field-animate" data-delay="700">
                            <label for="message" class="block text-sm font-medium text-slate-900 mb-2">
                                Message *
                            </label>
                            <textarea 
                                id="message" 
                                name="message" 
                                rows="4" 
                                required
                                class="w-full px-3 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 bg-white text-slate-900 resize-y hover:border-teal-300"
                                placeholder="Please describe your project requirements, questions, or how we can help you achieve your goals..."
                            ></textarea>
                        </div>

                        <div class="flex flex-col items-center justify-center gap-6 pt-2">
                            <div class="flex items-center text-sm text-slate-600 form-guarantee-animate">
                                <div class="flex items-center space-x-2 bg-green-50 px-3 py-1.5 rounded-full border border-green-200">
                                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                    <span class="font-medium">We'll respond within 24 hours</span>
                                </div>
                            </div>
                            
                            <div class="form-button-animate">
                                <button 
                                    type="submit" 
                                    class="inline-flex items-center px-6 py-3 bg-transparent border-2 border-teal-500 text-teal-500 hover:bg-teal-500 hover:text-white font-semibold text-base rounded-full transition-all duration-300 group transform hover:scale-105 hover:shadow-lg min-w-[180px] justify-center focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2"
                                    id="submitBtn"
                                >
                                    Send Message
                                    <svg class="w-4 h-4 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
      
    <!-- Contact Information Section -->
   
 
    <!-- Office Locations Section -->
  
    <section class="py-20 lg:py-28 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 slide-up">
      <div class="inline-flex items-center px-4 py-2 bg-teal-100 border border-teal-200 rounded-full text-teal-700 text-sm font-medium mb-6">
        Visit Our Location
      </div>
      <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-6">
        Find Us in <span class="text-teal-400">Dubai</span>
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto leading-relaxed">
        Visit our showroom to see Primotech products in action and get hands-on consultation from our security experts.
      </p>
    </div>

    <!-- Map Container -->
    <div class="slide-up">
      <div class="overflow-hidden rounded-2xl shadow-2xl border border-slate-200">
        <iframe
          src="https://www.google.com/maps?q=25.262528,55.290111&hl=en&z=16&output=embed"
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="EZVIZ Dubai Office Location">
        </iframe>
      </div>
    </div>
  </div>
</section>
</main>

<!-- Enhanced Professional CSS - Support Style -->
<style>
    /* Global styles - Fixed overflow issue */
    html {
        scroll-behavior: smooth;
    }
    
    body {
        max-width: 100vw;
        overflow-x: hidden;
    }

    * {
        box-sizing: border-box;
    }

    /* Container width fix */
    .container {
        max-width: 1200px;
        width: 100%;
    }

    /* Hero animations - Same as Support */
    .contact-hero {
        opacity: 0;
        transform: translateY(50px);
        transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-hero.hero-revealed {
        opacity: 1;
        transform: translateY(0);
    }

    .hero-image-reveal {
        transform: scale(1.1);
        opacity: 0;
        transition: all 2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-hero.hero-revealed .hero-image-reveal {
        transform: scale(1);
        opacity: 1;
        transition-delay: 0.2s;
    }

    .hero-overlay-fade {
        opacity: 0;
        transition: opacity 1s ease-out;
    }

    .contact-hero.hero-revealed .hero-overlay-fade {
        opacity: 1;
        transition-delay: 0.4s;
    }

    .hero-content-reveal {
        opacity: 0;
        transform: translateX(-60px);
        transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-hero.hero-revealed .hero-content-reveal {
        opacity: 1;
        transform: translateX(0);
        transition-delay: 0.6s;
    }

    /* Staggered hero text animations */
    .hero-title-animate {
        opacity: 0;
        transform: translateY(40px);
        transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .hero-subtitle-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .hero-description-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .hero-button-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-hero.hero-revealed .hero-title-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.8s;
    }

    .contact-hero.hero-revealed .hero-subtitle-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 1s;
    }

    .contact-hero.hero-revealed .hero-description-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 1.2s;
    }

    .contact-hero.hero-revealed .hero-button-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 1.4s;
    }

    /* Contact Options Section animations */
    .contact-options-section {
        opacity: 0;
        transform: translateY(60px);
        transition: all 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-options-section.section-revealed {
        opacity: 1;
        transform: translateY(0);
    }

    .contact-badge-animate,
    .contact-title-animate,
    .contact-description-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-options-section.section-revealed .contact-badge-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.2s;
    }

    .contact-options-section.section-revealed .contact-title-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.4s;
    }

    .contact-options-section.section-revealed .contact-description-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.6s;
    }

    .contact-card-animate {
        opacity: 0;
        transform: translateY(40px) scale(0.95);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-options-section.section-revealed .contact-card-animate {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    /* Contact Form Section animations */
    .contact-form-section {
        opacity: 0;
        transform: translateY(50px);
        transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-form-section.section-revealed {
        opacity: 1;
        transform: translateY(0);
    }

    .form-badge-animate,
    .form-title-animate,
    .form-description-animate,
    .form-container-animate,
    .form-field-animate,
    .form-guarantee-animate,
    .form-button-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-form-section.section-revealed .form-badge-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.2s;
    }

    .contact-form-section.section-revealed .form-title-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.4s;
    }

    .contact-form-section.section-revealed .form-description-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.6s;
    }

    .contact-form-section.section-revealed .form-container-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.8s;
    }

    .contact-form-section.section-revealed .form-field-animate {
        opacity: 1;
        transform: translateY(0);
    }

    .contact-form-section.section-revealed .form-guarantee-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 1.2s;
    }

    .contact-form-section.section-revealed .form-button-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 1.4s;
    }

    /* Contact Info Section animations */
    .contact-info-section {
        opacity: 0;
        transform: translateY(50px);
        transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-info-section.section-revealed {
        opacity: 1;
        transform: translateY(0);
    }

    .info-card-animate {
        opacity: 0;
        transform: translateY(40px) scale(0.95);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .contact-info-section.section-revealed .info-card-animate {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    /* Locations Section animations */
    .locations-section {
        opacity: 0;
        transform: translateY(50px);
        transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .locations-section.section-revealed {
        opacity: 1;
        transform: translateY(0);
    }

    .locations-badge-animate,
    .locations-title-animate,
    .locations-description-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .locations-section.section-revealed .locations-badge-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.2s;
    }

    .locations-section.section-revealed .locations-title-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.4s;
    }

    .locations-section.section-revealed .locations-description-animate {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.6s;
    }

    .location-card-animate {
        opacity: 0;
        transform: translateY(40px) scale(0.95);
        transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .locations-section.section-revealed .location-card-animate {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    /* Card hover effects */
    .contact-card-animate,
    .location-card-animate {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        text-decoration: none;
    }

    .contact-card-animate:hover,
    .location-card-animate:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        transform: translateY(-8px);
        text-decoration: none;
    }

    /* Smooth scroll behavior */
    html {
        scroll-behavior: smooth;
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
        .contact-hero,
        .contact-options-section,
        .contact-form-section,
        .contact-info-section,
        .locations-section,
        .hero-image-reveal,
        .hero-overlay-fade,
        .hero-content-reveal,
        .hero-title-animate,
        .hero-subtitle-animate,
        .hero-description-animate,
        .hero-button-animate,
        .contact-badge-animate,
        .contact-title-animate,
        .contact-description-animate,
        .contact-card-animate,
        .form-badge-animate,
        .form-title-animate,
        .form-description-animate,
        .form-container-animate,
        .form-field-animate,
        .form-guarantee-animate,
        .form-button-animate,
        .info-card-animate,
        .locations-badge-animate,
        .locations-title-animate,
        .locations-description-animate,
        .location-card-animate {
            animation: none;
            opacity: 1;
            transform: none;
            transition: none;
        }
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
        .hero-content-reveal {
            transform: translateY(40px);
        }
        
        .contact-hero.hero-revealed .hero-content-reveal {
            transform: translateY(0);
        }
        
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }
