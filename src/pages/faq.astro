---
import Layout from "../layouts/Layout.astro";

const title = "FAQ - PrimoTech LLC";
const description = "Frequently asked questions about PrimoTech security solutions, support, and services. Find answers to common questions.";
---

<Layout title={title} description={description}>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[70vh] overflow-hidden faq-hero">
      <!-- Background Image -->
      <div class="absolute inset-0">
        <img 
          src="/images/faq-banner.jpg" 
          alt="Customer support and FAQ assistance" 
          class="w-full h-full object-cover hero-image-reveal"
        />
        <div class="absolute inset-0 bg-black/40 hero-overlay-fade"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-teal-900/80 to-transparent hero-overlay-fade"></div>
      </div>

      <!-- Hero Content -->
      <div class="relative z-10 flex items-center h-full">
        <div class="container mx-auto px-6 lg:px-8">
          <div class="max-w-3xl hero-content-reveal">
            <h1 class="text-6xl lg:text-8xl font-bold text-white mb-8 hero-title-animate">
              FAQ
            </h1>
            <p class="text-xl lg:text-2xl text-gray-200 mb-4 hero-subtitle-animate">
              Find answers to common questions
            </p>
            <p class="text-lg lg:text-xl text-gray-300 mb-8 hero-description-animate">
              about our security solutions and services.
            </p>
            
            <!-- Search FAQ Button -->
            <div class="hero-button-animate">
              <a 
                href="#faq-search"
                class="inline-flex items-center px-6 py-3 bg-transparent border-2 border-teal-400 text-teal-400 hover:bg-teal-400 hover:text-white font-semibold text-base rounded-full transition-all duration-300 group transform hover:scale-105 hover:shadow-lg"
              >
                Search FAQ
                <svg class="ml-2 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Search Section -->
    <section class="py-16 bg-gradient-to-b from-white to-slate-50 search-section" id="faq-search">
      <div class="container mx-auto px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center px-3 py-1.5 bg-teal-100 text-teal-800 rounded-full text-sm font-medium mb-3 search-badge-animate">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
            </svg>
            Quick Search
          </div>
          <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4 search-title-animate">
            Search Our Knowledge Base
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-8 search-description-animate">
            Can't find what you're looking for? Use our search feature to quickly find answers 
            to your questions about our products and services.
          </p>

          <!-- Search Box -->
          <div class="max-w-2xl mx-auto search-box-animate">
            <div class="relative">
              <input 
                type="text" 
                placeholder="Search for answers..." 
                class="w-full px-6 py-4 text-lg border-2 border-slate-300 rounded-full focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 bg-white text-slate-900 pl-14"
                id="faqSearch"
              >
              <svg class="absolute left-5 top-1/2 transform -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              <button 
                type="button"
                class="absolute right-3 top-1/2 transform -translate-y-1/2 px-4 py-2 bg-teal-600 hover:bg-teal-700 text-white rounded-full transition-all duration-300"
                id="searchBtn"
              >
                Search
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Categories Section -->
    <section class="py-16 bg-white categories-section">
      <div class="container mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
          <div class="inline-flex items-center px-3 py-1.5 bg-slate-100 text-slate-800 rounded-full text-sm font-medium mb-3 categories-badge-animate">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
            </svg>
            Browse by Category
          </div>
          <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4 categories-title-animate">
            FAQ Categories
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto categories-description-animate">
            Browse our most frequently asked questions organized by topic to find 
            the information you need quickly.
          </p>
        </div>

        <!-- Category Cards -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          <div class="group bg-gradient-to-br from-slate-50 to-blue-50 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-2 category-card-animate border border-slate-200" data-delay="200">
            <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M6 7h12"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">Products & Solutions</h3>
            <p class="text-slate-600 text-sm leading-relaxed mb-4">
              Questions about our security products, features, specifications, and compatibility.
            </p>
            <span class="inline-flex items-center text-blue-600 font-medium text-sm group-hover:text-blue-700">
              View Questions
              <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
          </div>

          <div class="group bg-gradient-to-br from-slate-50 to-teal-50 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-2 category-card-animate border border-slate-200" data-delay="400">
            <div class="w-14 h-14 bg-gradient-to-br from-teal-500 to-teal-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 11-9.75 9.75A9.75 9.75 0 0112 2.25z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">Technical Support</h3>
            <p class="text-slate-600 text-sm leading-relaxed mb-4">
              Troubleshooting guides, installation help, and technical assistance questions.
            </p>
            <span class="inline-flex items-center text-teal-600 font-medium text-sm group-hover:text-teal-700">
              View Questions
              <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
          </div>

          <div class="group bg-gradient-to-br from-slate-50 to-emerald-50 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-2 category-card-animate border border-slate-200" data-delay="600">
            <div class="w-14 h-14 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">Orders & Billing</h3>
            <p class="text-slate-600 text-sm leading-relaxed mb-4">
              Information about ordering, pricing, billing, shipping, and payment methods.
            </p>
            <span class="inline-flex items-center text-emerald-600 font-medium text-sm group-hover:text-emerald-700">
              View Questions
              <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
          </div>

          <div class="group bg-gradient-to-br from-slate-50 to-purple-50 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-2 category-card-animate border border-slate-200" data-delay="800">
            <div class="w-14 h-14 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">Account & Access</h3>
            <p class="text-slate-600 text-sm leading-relaxed mb-4">
              Account management, user permissions, login issues, and access controls.
            </p>
            <span class="inline-flex items-center text-purple-600 font-medium text-sm group-hover:text-purple-700">
              View Questions
              <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
          </div>

          <div class="group bg-gradient-to-br from-slate-50 to-orange-50 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-2 category-card-animate border border-slate-200" data-delay="1000">
            <div class="w-14 h-14 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">Training & Resources</h3>
            <p class="text-slate-600 text-sm leading-relaxed mb-4">
              Training programs, documentation, user guides, and educational resources.
            </p>
            <span class="inline-flex items-center text-orange-600 font-medium text-sm group-hover:text-orange-700">
              View Questions
              <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
          </div>

          <div class="group bg-gradient-to-br from-slate-50 to-rose-50 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-center transform hover:-translate-y-2 category-card-animate border border-slate-200" data-delay="1200">
            <div class="w-14 h-14 bg-gradient-to-br from-rose-500 to-rose-600 rounded-xl flex items-center justify-center mx-auto mb-4 transition-all duration-300 group-hover:scale-110">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">Partnerships</h3>
            <p class="text-slate-600 text-sm leading-relaxed mb-4">
              Partner program, distribution, reseller agreements, and collaboration opportunities.
            </p>
            <span class="inline-flex items-center text-rose-600 font-medium text-sm group-hover:text-rose-700">
              View Questions
              <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Popular Questions Section -->
    <section class="py-16 bg-slate-50 popular-section">
      <div class="container mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
          <div class="inline-flex items-center px-3 py-1.5 bg-teal-100 text-teal-800 rounded-full text-sm font-medium mb-3 popular-badge-animate">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
            </svg>
            Most Asked
          </div>
          <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4 popular-title-animate">
            Popular Questions
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto popular-description-animate">
            Here are the most frequently asked questions from our customers. 
            These cover the most common topics and concerns.
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <!-- Placeholder for popular questions -->
          <div class="bg-white rounded-xl shadow-lg p-8 text-center popular-content-animate">
            <div class="w-16 h-16 bg-gradient-to-br from-slate-100 to-slate-200 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">FAQ Content Coming Soon</h3>
            <p class="text-slate-600 mb-6">
              We're currently preparing our comprehensive FAQ database. Popular questions 
              and detailed answers will be displayed here to help you find information quickly.
            </p>
            <div class="inline-flex items-center text-teal-600 font-medium">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Updates coming soon
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Support Section -->
    <section class="py-20 bg-white contact-section">
      <div class="container mx-auto px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center px-3 py-1.5 bg-slate-100 text-slate-800 rounded-full text-sm font-medium mb-3 contact-badge-animate">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            Need More Help?
          </div>
          <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4 contact-title-animate">
            Can't Find Your Answer?
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-8 contact-description-animate">
            If you can't find the answer you're looking for, our support team is here to help. 
            Contact us directly for personalized assistance.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center contact-buttons-animate">
            <a 
              href="/contact"
              class="inline-flex items-center px-6 py-3 bg-transparent border-2 border-teal-500 text-teal-500 hover:bg-teal-500 hover:text-white font-semibold text-base rounded-full transition-all duration-300 group transform hover:scale-105 hover:shadow-lg"
            >
              Contact Support
              <svg class="ml-2 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            
            <a 
              href="/support"
              class="inline-flex items-center px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white font-semibold text-base rounded-full transition-all duration-300 group transform hover:scale-105 hover:shadow-lg"
            >
              Visit Support Center
              <svg class="ml-2 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 11-9.75 9.75A9.75 9.75 0 0112 2.25z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Global styles */
  html {
    scroll-behavior: smooth;
  }
  
  body {
    max-width: 100vw;
    overflow-x: hidden;
  }

  * {
    box-sizing: border-box;
  }

  /* Container width fix */
  .container {
    max-width: 1200px;
    width: 100%;
  }

  /* Hero animations - Same as Partner */
  .faq-hero {
    opacity: 0;
    transform: translateY(50px);
    transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .faq-hero.hero-revealed {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-image-reveal {
    transform: scale(1.1);
    opacity: 0;
    transition: all 2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .faq-hero.hero-revealed .hero-image-reveal {
    transform: scale(1);
    opacity: 1;
    transition-delay: 0.2s;
  }

  .hero-overlay-fade {
    opacity: 0;
    transition: opacity 1s ease-out;
  }

  .faq-hero.hero-revealed .hero-overlay-fade {
    opacity: 1;
    transition-delay: 0.4s;
  }

  .hero-content-reveal {
    opacity: 0;
    transform: translateX(-60px);
    transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .faq-hero.hero-revealed .hero-content-reveal {
    opacity: 1;
    transform: translateX(0);
    transition-delay: 0.6s;
  }

  .hero-title-animate {
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .hero-subtitle-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .hero-description-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .hero-button-animate {
    opacity: 0;
    transform: translateY(30px) scale(0.8);
    transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .faq-hero.hero-revealed .hero-title-animate {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.8s;
  }

  .faq-hero.hero-revealed .hero-subtitle-animate {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 1s;
  }

  .faq-hero.hero-revealed .hero-description-animate {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 1.2s;
  }

  .faq-hero.hero-revealed .hero-button-animate {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition-delay: 1.4s;
  }

  /* Search Section animations */
  .search-section {
    opacity: 0;
    transform: translateY(60px);
    transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .search-section.section-revealed {
    opacity: 1;
    transform: translateY(0);
  }

  .search-badge-animate,
