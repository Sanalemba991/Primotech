  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": title,
  "description": description,
  "url": canonicalUrl,
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": `${Astro.site}`
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Lovosis & Spottive Partners",
        "item": canonicalUrl
      }
    ]
  },
  "mainEntity": [
    {
      "@type": "Organization",
      "name": "Lovosis Technology",
      "url": "https://lovosis.com/",
      "logo": {
        "@type": "ImageObject",
        "url": `${Astro.url.origin}/images/partner.png`
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+971 50 916 2488",
        "email": "sales@lovosis.com",
        "contactType": "customer service",
        "areaServed": "AE"
      },
      "description": "Lovosis Technology is a leading provider of innovative IT solutions and services, empowering businesses with cutting-edge technology."
    },
    {
      "@type": "Organization",
      "name": "Spottive Technologies",
      "url": "https://spottive.com/",
      "logo": {
        "@type": "ImageObject",
        "url": `${Astro.url.origin}/images/partner1.png`
      },
