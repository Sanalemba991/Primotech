const title = "Partner - PrimoTech LLC";
const description = "Join our partner network and grow your business with PrimoTech security solutions. Become an authorized distributor today.";

// Canonical URL
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Structured Data
