    opacity: 0;
    transform: translateY(60px);
    transition: all 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .contact-section.contact-revealed {
    opacity: 1;
    transform: translateY(0);
  }

