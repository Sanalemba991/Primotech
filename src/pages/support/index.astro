<style>
  /* Hero animations */
  .support-hero {
    opacity: 0;
    transform: translateY(50px);
    transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .support-hero.hero-revealed {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-image-reveal {
    transform: scale(1.1);
    opacity: 0;
    transition: all 2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .support-hero.hero-revealed .hero-image-reveal {
    transform: scale(1);
    opacity: 1;
    transition-delay: 0.2s;
  }

  .hero-overlay-fade {
    opacity: 0;
    transition: opacity 1s ease-out;
  }

  .support-hero.hero-revealed .hero-overlay-fade {
    opacity: 1;
    transition-delay: 0.4s;
  }

  .hero-content-reveal {
    opacity: 0;
    transform: translateX(-60px);
    transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .support-hero.hero-revealed .hero-content-reveal {
    opacity: 1;
    transform: translateX(0);
    transition-delay: 0.6s;
  }

  /* Staggered hero text animations */
  .hero-title-animate {
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .hero-subtitle-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .hero-description-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .support-hero.hero-revealed .hero-title-animate {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.8s;
  }

  .support-hero.hero-revealed .hero-subtitle-animate {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 1s;
  }

  .support-hero.hero-revealed .hero-description-animate {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 1.2s;
  }

  /* Support grid animations */
  .support-grid-section {
    opacity: 0;
    transform: translateY(60px);
    transition: all 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .support-grid-section.grid-revealed {
    opacity: 1;
    transform: translateY(0);
  }

  .support-card-animate {
    opacity: 0;
    transform: translateY(40px) scale(0.95);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .support-grid-section.grid-revealed .support-card-animate {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Card hover effects */
  .support-card {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    text-decoration: none;
  }

  .support-card:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(-8px);
    text-decoration: none;
  }

  /* Contact section animations */
  .contact-section {
    opacity: 0;
    transform: translateY(50px);
    transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .contact-section.contact-revealed {
    opacity: 1;
    transform: translateY(0);
  }

  .contact-title-animate {
    opacity: 0;
    transform: translateY(40px) scale(0.9);
    transition: all 1s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .contact-description-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .contact-button-animate {
    opacity: 0;
    transform: translateY(30px) scale(0.8);
    transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .contact-section.contact-revealed .contact-title-animate {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition-delay: 0.3s;
  }

  .contact-section.contact-revealed .contact-description-animate {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.5s;
  }

  .contact-section.contact-revealed .contact-button-animate {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition-delay: 0.7s;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .hero-content-reveal {
      transform: translateY(40px);
    }
    
    .support-hero.hero-revealed .hero-content-reveal {
      transform: translateY(0);
    }

    .contact-title-animate {
      font-size: 1.5rem !important;
    }
    
    .contact-description-animate p {
      font-size: 1rem;
    }
  }
</style>

<script>
  // Intersection Observer for animations
  const observerOptions = {
    threshold: [0, 0.1, 0.3],
    rootMargin: '0px 0px -100px 0px'
  };

  // Hero section observer
  const heroObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting && entry.intersectionRatio > 0.1) {
        entry.target.classList.add('hero-revealed');
        heroObserver.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Grid section observer
  const gridObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting && entry.intersectionRatio > 0.1) {
        entry.target.classList.add('grid-revealed');
        
        // Stagger card animations
        const cards = entry.target.querySelectorAll('.support-card-animate');
        cards.forEach((card, index) => {
          setTimeout(() => {
            (card as HTMLElement).style.transitionDelay = `${index * 0.1}s`;
          }, 100);
        });
        
        gridObserver.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Contact section observer
  const contactObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting && entry.intersectionRatio > 0.1) {
        entry.target.classList.add('contact-revealed');
        contactObserver.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Initialize animations
  document.addEventListener('DOMContentLoaded', () => {
    const heroSection = document.querySelector('.support-hero');
    const gridSection = document.querySelector('.support-grid-section');
    const contactSection = document.querySelector('.contact-section');
    
    if (heroSection) {
      heroObserver.observe(heroSection);
    }
    
    if (gridSection) {
      gridObserver.observe(gridSection);
    }

    if (contactSection) {
      contactObserver.observe(contactSection);
    }
  });
</script>