---

 <Layout 
  title={title} 
  description={description} 
  structuredData={structuredData} 
  canonicalUrl={canonicalUrl}
>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[60vh] lg:h-[70vh] overflow-hidden support-hero">
      <!-- Background Image -->
