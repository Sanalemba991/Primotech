import Layout from "../layouts/Layout.astro";
import Whatsapp from "../components/Whatsapp.tsx";

const title = "Privacy Policy | PrimoTech LLC";
const description =
  "PrimoTech LLC's privacy policy outlines how we collect, use, and protect your personal information.";

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: title,
  description: description,
  url: canonicalUrl,
  mainEntity: {
    "@type": "Article",
    headline: "Privacy Policy",
    datePublished: "2025-07-02",
    dateModified: "2025-07-02",
    author: {
      "@type": "Organization",
      name: "PrimoTech LLC",
      url: "https://www.primotech-llc.com",
      logo: {
