---
import Layout from "../layouts/Layout.astro";
import Whatsapp from "../components/Whatsapp.tsx";

const title = "Privacy Policy | PrimoTech LLC";
const description = "PrimoTech LLC's privacy policy outlines how we collect, use, and protect your personal information.";

// Current URL for sharing
const currentUrl = Astro.url.href;
---

<Layout title={title} description={description}>
  <main class="min-h-screen bg-white">
    <!-- Header Section -->
    <section class="bg-gray-50 py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl font-light text-gray-900 mb-4">{title}</h1>
          <div class="w-20 h-0.5 bg-teal-500 mx-auto mb-6"></div>
          
          <!-- Social Sharing -->
          <div class="flex items-center justify-center space-x-4 mt-6">
            <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`} 
