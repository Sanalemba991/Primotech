    },
    {
      "@type": "WebPageElement",
      name: "Contact Us",
      description: "How to contact PrimoTech regarding privacy concerns",
    },
  ],
  potentialAction: {
    "@type": "ReadAction",
    target: canonicalUrl,
  },
  isPartOf: {
    "@type": "WebSite",
    name: "PrimoTech LLC",
    url: "https://www.primotechllc.com",
  },
  inLanguage: "en-US",
  copyrightHolder: {
    "@type": "Organization",
    name: "PrimoTech LLC",
