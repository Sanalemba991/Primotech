    width: 200%;
    height: 200%;
    opacity: 1;
  }
  
  @media (max-width: 640px) {
    .prose {
      font-size: 0.95rem;
    }
  }
</style>

<script>
  // Add click tracking for social share buttons and animations
  document.addEventListener('DOMContentLoaded', () => {
    const shareButtons = document.querySelectorAll('a[rel="noopener noreferrer"]');
    shareButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        // If you have analytics, you can track share events here
        const network = button.getAttribute('aria-label')?.split(' ').pop()?.toLowerCase();
        console.log(`Shared on ${network}`);
      });
      
      // Add animation class for WhatsApp button
      if (button.getAttribute('aria-label') === 'Share on WhatsApp') {
        button.classList.add('social-share-whatsapp');
        
        // Add entrance animation
        setTimeout(() => {
          button.classList.add('animate-pulse');
          setTimeout(() => {
            button.classList.remove('animate-pulse');
          }, 1000);
        }, 1500);
      }
    });
    
    // Section animations
    const sectionObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('section-revealed');
          sectionObserver.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.18,
      rootMargin: '0px 0px -80px 0px'
    });

    // Hero observer for banner cinematic effect
    const heroObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('hero-revealed');
          heroObserver.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.12,
      rootMargin: '0px 0px -40px 0px'
    });

    // Hero banner
    const heroSection = document.querySelector('.company-hero');
    if (heroSection) heroObserver.observe(heroSection);

    // All main sections (except hero)
    document.querySelectorAll('.main-section').forEach(section => {
      sectionObserver.observe(section);
    });
  });
</script>
