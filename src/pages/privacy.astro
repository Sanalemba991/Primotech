<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Animate header elements with staggered delay
    const headerElements = document.querySelectorAll(".header-element");
    headerElements.forEach((el, index) => {
      setTimeout(
        () => {
          el.classList.add("animate");
        },
        300 + index * 150,
      );
    });

    // Animate social icons with extra delay and staggered effect
    const socialIcons = document.querySelectorAll(".social-icon");
    socialIcons.forEach((icon, index) => {
      setTimeout(
        () => {
          icon.classList.add("animate");
        },
        800 + index * 100,
      );
    });

    // Add click tracking for social share buttons and animations
    const shareButtons = document.querySelectorAll(
      'a[rel="noopener noreferrer"]',
    );
    shareButtons.forEach((button) => {
      button.addEventListener("click", (e) => {
        // If you have analytics, you can track share events here
        const network = button
          .getAttribute("aria-label")
          ?.split(" ")
          .pop()
          ?.toLowerCase();
        console.log(`Shared on ${network}`);
      });

      // Add animation class for WhatsApp button
      if (button.getAttribute("aria-label") === "Share on WhatsApp") {
        button.classList.add("social-share-whatsapp");

        // Add entrance animation
        setTimeout(() => {
          button.classList.add("animate-pulse");
          setTimeout(() => {
            button.classList.remove("animate-pulse");
          }, 1000);
        }, 1500);
      }
    });

    // Section animations with Intersection Observer
    const policySections = document.querySelectorAll(".policy-section");

    const sectionObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("animate");
            sectionObserver.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.15,
        rootMargin: "0px 0px -50px 0px",
      },
    );

    policySections.forEach((section) => {
      sectionObserver.observe(section);
    });

    // Hero observer for banner cinematic effect
    const heroObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("hero-revealed");
            heroObserver.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.12,
        rootMargin: "0px 0px -40px 0px",
      },
    );

    // Hero banner
    const heroSection = document.querySelector(".company-hero");
    if (heroSection) heroObserver.observe(heroSection);

    // All main sections (except hero)
    document.querySelectorAll(".main-section").forEach((section) => {
      sectionObserver.observe(section);
    });

    // Header section animation
    const headerSection = document.querySelector(
      ".header-section",
    ) as HTMLElement;
    if (headerSection) {
      headerSection.style.opacity = "1";
      headerSection.style.transform = "translateY(0)";

      const headerElements = document.querySelectorAll(".header-element");
      headerElements.forEach((el, index) => {
        setTimeout(() => {
          (el as HTMLElement).style.opacity = "1";
          (el as HTMLElement).style.transform = "translateY(0)";
        }, index * 100); // Staggered effect
      });
    }
  });
</script>
