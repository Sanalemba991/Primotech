---
import Layout from "../../../layouts/Layout.astro";
import Whatsapp from '../../../components/Whatsapp';
import { getCollection } from "astro:content";

const pandapseries = await getCollection("pandabseries");
const title = "Panda B Series Cameras | Efficient Surveillance | PrimoTech LLC";
const description = "Discover Panda B Series cameras for efficient, everyday surveillance. Reliable, easy-to-use, and ideal for small businesses, offices, and homes.";
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://primotechllc.com/#organization",
      "name": "PrimoTech LLC - Uniarch Authorized Distributor Dubai",
      "url": "https://primotechllc.com",
      "logo": {
        "@type": "ImageObject",
        "@id": `${Astro.url.origin}/log.png`,
        "url": `${Astro.url.origin}/log.png`,
        "caption": "PrimoTech LLC - Uniarch Authorized Distributor Dubai",
        "inLanguage": "en-US",
        "width": 1000,
        "height": 375
      },
      "sameAs": [
        "https://www.linkedin.com/company/primotechllc/",
        "https://www.facebook.com/primotechllc"
      ]
    },
    {
      "@type": "WebSite",
      "@id": "https://primotechllc.com/#website",
      "url": "https://primotechllc.com",
      "name": "PrimoTech Security - Uniarch Authorized Distributor Dubai",
      "publisher": {
        "@id": "https://primotechllc.com/#organization"
      },
      "inLanguage": "en-US"
    },
    {
      "@type": "WebPage",
      "@id": `${canonicalUrl}#webpage`,
      "url": canonicalUrl,
      "name": title,
      "description": description,
      "isPartOf": {
        "@id": "https://primotechllc.com/#website"
      },
      "about": {
        "@id": "https://primotechllc.com/#organization"
      },
      "inLanguage": "en-US",
      "breadcrumb": {
        "@id": `${canonicalUrl}#breadcrumb`
      }
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${canonicalUrl}#breadcrumb`,
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://primotechllc.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Products",
          "item": "https://primotechllc.com/products"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "Panda B Series",
          "item": canonicalUrl
        }
      ]
    },
    {
      "@type": "CollectionPage",
      "@id": `${canonicalUrl}#collectionpage`,
      "url": canonicalUrl,
      "name": "Panda B Series Cameras - PrimoTech",
      "description": description,
      "isPartOf": {
        "@id": `${canonicalUrl}#webpage`
      },
      "inLanguage": "en-US",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": pandapseries.map((item, idx) => ({
          "@type": "ListItem",
          "position": idx + 1,
          "item": {
            "@type": "Product",
            "name": item.data.title ?? item.slug,
            "description": item.data.description ?? "",
            "url": `https://primotechllc.com/products/pandab/${item.slug}`,
            "image": item.data.image
              ? (item.data.image.startsWith('http')
                ? item.data.image
                : new URL(item.data.image, Astro.site).toString())
              : (item.data.images?.[0]?.url
                ? new URL(item.data.images[0].url, Astro.site).toString()
                : new URL("/images/placeholder-camera.jpg", Astro.site).toString()),
            "brand": {
              "@type": "Brand",
              "name": "PrimoTech"
            },
            "offers": {
              "@type": "Offer",
              "priceCurrency": "AED",
              "price": "0.00",
              "availability": "https://schema.org/InStock",
              "itemCondition": "https://schema.org/NewCondition",
              "seller": {
                "@type": "Organization",
                "name": "PrimoTech LLC"
              }
            },
            "aggregateRating": {
              "@type": "AggregateRating",
              "ratingValue": "4.8",
              "reviewCount": "15"
            },
            "review": {
              "@type": "Review",
              "reviewRating": {
                "@type": "Rating",
                "ratingValue": "5",
                "bestRating": "5"
              },
              "author": {
                "@type": "Person",
                "name": "Security Professional"
              },
              "reviewBody": "Great value and reliability for everyday surveillance needs."
            }
          }
        }))
      }
    },
     {
      "@type": "LocalBusiness",
      "@id": "https://primotechllc.com/#localbusiness",
      "name": "PrimoTech LLC - Uniarch Authorized Distributor Dubai",
      "image": `${Astro.url.origin}/log.png`,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Shop 23, Musthafa Building, Satellite Market, Deira, Dubai",
        "addressLocality": "Dubai",
        "addressRegion": "Dubai",
        "postalCode": "123241",
        "addressCountry": "AE"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "25.2048",
        "longitude": "55.2708"
      },
      "telephone": "+971 52 879 6664",
      "priceRange": "$$",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+971 52 879 6664",
        "contactType": ["sales", "customer service", "support"],
        "email": "info@primotech-llc.com",
        "areaServed": ["AE"],
        "availableLanguage": ["English", "Arabic"],
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Shop 23, Musthafa Building, Satellite Market, Deira, Dubai",
          "addressLocality": "Dubai",
          "addressRegion": "Dubai",
          "postalCode": "123241",
          "addressCountry": "AE"
        }
      }
    }
  ]
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <!-- Hero Banner Section (No Animations) -->
  <section class="relative h-[45vh] md:h-[55vh] company-hero hero-section scroll-animate" data-animation="fade-up">
      <!-- Collage Background -->
      <div class="absolute inset-0 z-0">
          <img 
          src="/images/aboutus-background.png" 
          alt="Panda B Series Camera Background" 
          class="w-full h-full object-cover hero-image-reveal"
        />
        <div class="absolute inset-0 bg-black/40"></div>
      </div>
      <!-- Hero Content -->
      <div class="relative z-10 flex flex-col items-center justify-center w-full h-full text-center px-4">
        <h1 class="text-3xl sm:text-4xl md:text-6xl font-light text-white mb-4 tracking-wide hero-title-animate">Panda B Series Cameras</h1>
        <div class="w-24 h-1 bg-teal-400 rounded mx-auto mb-2 hero-divider-animate"></div>
      </div>
    </section>

  <!-- Introduction Section -->
  <section class="introduction section-animate">
    <div class="container">
      <div class="intro-content">
        <div class="intro-text">
          <h2 class="md:text-left text-center">Versatile Panda B Series</h2>
          <p class="md:text-left text-center">
            <strong>Panda B Series Cameras</strong> deliver reliable, high-definition surveillance for a variety of environments. With robust build quality, easy installation, and advanced imaging features, these cameras are ideal for both residential and commercial security needs.
          </p>
        </div>
        <div class="intro-image">
          <img src="/images/Productimage/pandab.jpg" alt="Panda B Series Overview" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Advantage Section -->
  <section class="advantage section-animate">
    <div class="container">
      <div class="advantage-content">
        <div class="advantage-image">
          <img src="/images/Productimage/pandab2.jpg" alt="Panda B Series Advantages" />
        </div>
        <div class="advantage-text">
          <h2>Why Choose Panda B Series?</h2>
          <p>
            Benefit from <strong>high-resolution video</strong>, weather-resistant housings, and flexible mounting options. The Panda B Series is engineered for dependable performance and seamless integration with modern security systems.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Technology Section -->
  <section class="technology section-animate">
    <div class="container">
      <h2 class="tech-title">Panda B Series Technology</h2>
      <div class="tech-row">
        <div class="tech-col">
          <div class="tech-circle">
            <svg width="56" height="56" viewBox="0 0 24 24" fill="none" stroke="#14B8A6" stroke-width="2">
              <rect x="4" y="4" width="16" height="16" rx="2"/>
              <path d="M8 12h8"/>
            </svg>
          </div>
          <div class="tech-label">HD Imaging</div>
          <div class="tech-desc">Capture crisp, detailed footage for accurate monitoring and evidence.</div>
        </div>
        <div class="tech-col">
          <div class="tech-circle">
            <svg width="56" height="56" viewBox="0 0 24 24" fill="none" stroke="#14B8A6" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 8v4l3 3"/>
            </svg>
          </div>
          <div class="tech-label">Weather Resistant</div>
          <div class="tech-desc">Durable enclosures protect against dust, rain, and extreme temperatures.</div>
        </div>
        <div class="tech-col">
          <div class="tech-circle">
            <svg width="56" height="56" viewBox="0 0 24 24" fill="none" stroke="#14B8A6" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <circle cx="8.5" cy="8.5" r="1.5"/>
              <polyline points="21,15 16,10 5,21"/>
            </svg>
          </div>
          <div class="tech-label">Easy Integration</div>
          <div class="tech-desc">Compatible with a wide range of NVRs, DVRs, and monitoring platforms.</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product List Section -->
  <section class="products section-animate">
    <div class="container">
      <h2>Panda B Series Product List</h2>
      <div class="product-grid">
        {pandapseries.map(item => (
          <div class="product-card">
            <a href={`/products/pandab/${item.slug}`} class="product-link">
              <div class="product-image">
                <img 
                  src={item.data.image ?? (item.data.images?.[0]?.url ?? "/images/placeholder-camera.jpg")}
                  alt={item.data.images?.[0]?.caption ?? item.data.title ?? item.slug}
                />
              </div>
              <div class="product-info">
                <h3 class="product-title">{item.data.title ?? item.slug}</h3>
                <p class="product-description">
                  {item.data.description ?? ""}
                </p>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
    <Whatsapp client:load />
</Layout>

<style>
   html, body {
    overflow-x: hidden !important;
    max-width: 100vw !important;
    position: relative;
    width: 100%;
  }
  
  /* Fixed navbar styles - keeps navbar visible while scrolling */
  :global(header), :global(nav), :global(.navbar), :global(.site-header) {
    position: fixed !important;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 1000;
    background-color: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  /* Add top padding to accommodate the fixed navbar */
  :global(main), :global(.main-content) {
    padding-top: 50px; /* Adjust this value to match your navbar height */
  }
  
  /* Global Styles */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 5vw, 1.5rem);
  }

  /* Hero Banner - No Animations */
  .company-hero {
    min-height: 300px;
  }

  /* Section Animations */
  .section-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }

  .section-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Introduction Section */
  .introduction {
    padding: clamp(2.5rem, 8vw, 4rem) 0;
    background: #f8fafc;
  }
  
  .intro-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(1.5rem, 5vw, 3rem);
    align-items: center;
  }
  
  .intro-text h2 {
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    color: #2d3748;
    margin: 0 0 clamp(1rem, 3vw, 1.5rem) 0;
    font-weight: 600;
    line-height: 1.2;
  }
  
  .intro-text p {
    font-size: clamp(0.95rem, 1.5vw, 1.1rem);
    line-height: 1.7;
    color: #4a5568;
    margin: 0;
  }
  
  .intro-image {
    margin: 0 auto;
    max-width: 100%;
  }
  
  .intro-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  /* Advantage Section */
  .advantage {
    padding: clamp(2.5rem, 8vw, 4rem) 0;
  }
  
  .advantage-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(1.5rem, 5vw, 3rem);
    align-items: center;
  }
  
  .advantage-text h2 {
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    color: #2d3748;
    margin: 0 0 clamp(1rem, 3vw, 1.5rem) 0;
    font-weight: 600;
    line-height: 1.2;
  }
  
  .advantage-text p {
    font-size: clamp(0.95rem, 1.5vw, 1.1rem);
    line-height: 1.7;
    color: #4a5568;
    margin: 0;
  }
  
  .advantage-text strong {
    color: #14B8A6;
    font-weight: 600;
  }
  
  .advantage-image {
    margin: 0 auto;
    max-width: 100%;
  }
  
  .advantage-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  /* Technology Section */
  .technology {
    padding: clamp(2.5rem, 8vw, 4rem) 0 clamp(2rem, 7vw, 3rem) 0;
    background: #fff;
  }
  
  .tech-title {
    text-align: center;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    color: #22223b;
    font-weight: 500;
    margin-bottom: clamp(1.5rem, 4vw, 2.5rem);
    letter-spacing: 0.5px;
    line-height: 1.2;
  }
  
  .tech-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-start;
    gap: clamp(1.5rem, 4vw, 2.5rem);
    margin: 0 auto;
    max-width: 1100px;
  }
  
  .tech-col {
    flex: 1 1 280px;
    min-width: 220px;
    max-width: 340px;
    text-align: center;
    margin-bottom: clamp(1rem, 3vw, 0);
  }
  
  .tech-circle {
    width: clamp(80px, 15vw, 110px);
    height: clamp(80px, 15vw, 110px);
    border: 2px solid #14B8A6;
    border-radius: 50%;
    margin: 0 auto clamp(1rem, 3vw, 1.5rem) auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    transition: box-shadow 0.3s, transform 0.3s;
  }
  
  .tech-col:hover .tech-circle {
    box-shadow: 0 4px 24px #14B8A6;
    transform: translateY(-5px);
  }
  
  .tech-circle svg {
    width: clamp(40px, 8vw, 56px);
    height: clamp(40px, 8vw, 56px);
  }
  
  .tech-label {
    font-size: clamp(1rem, 2vw, 1.15rem);
    font-weight: 500;
    color: #14B8A6;
    margin-bottom: 0.5rem;
    margin-top: 0.5rem;
  }
  
  .tech-desc {
    color: #444;
    font-size: clamp(0.9rem, 1.5vw, 1rem);
    margin: 0 auto;
    max-width: 260px;
    line-height: 1.5;
  }

  /* Products Section */
  .products {
    padding: clamp(2.5rem, 8vw, 4rem) 0;
  }
  
  .products h2 {
    text-align: center;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    color: #2d3748;
    margin: 0 0 clamp(2rem, 5vw, 3rem) 0;
    font-weight: 600;
    line-height: 1.2;
  }
  
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(min(100%, 320px), 1fr));
    gap: clamp(1rem, 3vw, 2rem);
    place-content: center;
  }
  
  .product-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    width: 100%;
    max-width: 380px;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
  }
  
  .product-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }
  
  .product-image {
    height: 220px;
    background: #f8fafc;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 1rem;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-image img {
    transform: scale(1.05);
  }
  
  .product-info {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    text-align: center;
  }
  
  .product-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #2d3748;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }
  
  .product-description {
    color: #4a5568;
    line-height: 1.5;
    margin: 0;
    font-size: 0.95rem;
    flex-grow: 1;
  }

  /* Responsive Design - Enhanced */
  @media (max-width: 1024px) {
    .intro-content,
    .advantage-content {
      gap: 2rem;
    }
    
    .tech-row {
      gap: 2rem;
    }
  }

  @media (max-width: 900px) {
    .tech-row {
      flex-direction: column;
      align-items: center;
      gap: 2.5rem;
    }
    .tech-col {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .intro-content,
    .advantage-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .advantage-content {
      flex-direction: column-reverse;
      display: flex;
    }
    
    .intro-image, 
    .advantage-image {
      order: -1; /* Image first on mobile */
    }
    
    .intro-image img,
    .advantage-image img {
      height: clamp(200px, 40vw, 250px);
      max-width: min(500px, 100%);
      margin: 0 auto;
      display: block;
    }
    
    .advantage-text h2,
    .advantage-text p {
      text-align: center;
    }
    
    .introduction,
    .advantage,
    .technology,
    .products {
      padding: 3rem 0;
    }
    
    .tech-circle {
      width: 90px;
      height: 90px;
    }
    
    .tech-circle svg {
      width: 46px;
      height: 46px;
    }
  }
  
  @media (max-width: 640px) {
    .introduction,
    .advantage,
    .technology,
    .products {
      padding: 2rem 0;
    }
    
    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(min(100%, 280px), 1fr));
    }
    
    .product-card {
      max-width: 100%;
    }
    
    .product-image {
      height: 180px;
    }
    
    .container {
      padding: 0 1rem;
    }
    
    .tech-circle {
      width: 80px;
      height: 80px;
      margin-bottom: 1rem;
    }
    
    .tech-circle svg {
      width: 40px;
      height: 40px;
    }
    
    .tech-label {
      font-size: 1rem;
    }
    
    .tech-desc {
      font-size: 0.9rem;
    }
  }
  
  @media (max-width: 480px) {
    .intro-text h2,
    .advantage-text h2,
    .tech-title,
    .products h2 {
      margin-bottom: 1rem;
    }
    
    .tech-col {
      padding: 0 0.5rem;
    }
    
    .intro-image img,
    .advantage-image img {
      height: 200px;
      border-radius: 8px;
    }
    
    .product-image {
      height: 160px;
    }
    
    .product-info {
      padding: 1.25rem;
    }
    
    .tech-row {
      gap: 2rem;
    }
    
    .hero-divider-animate {
      width: 60px;
    }
  }
  
  /* Improve mobile touch targets */
  @media (hover: none) and (pointer: coarse) {
    .product-card {
      transform: none !important;
      box-shadow: 0 5px 15px rgba(0,0,0,0.08) !important;
    }
    
    .product-image img {
      transform: none !important;
    }
    
    /* Add active state for touch devices */
    .tech-col:active .tech-circle {
      box-shadow: 0 4px 16px #14B8A6;
      transform: translateY(-3px);
    }
    
    /* Add tap states for cards */
    .product-card:active {
      transform: translateY(-3px) !important;
      box-shadow: 0 10px 25px rgba(0,0,0,0.12) !important;
    }
  }
</style>

<!-- Enhanced animations for sections -->
<style>
  /* Enhanced Section Animations */
  .section-animate {
    opacity: 0;
    transition: all 1.2s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform, opacity;
  }

  /* Introduction - Slide from left on desktop, fade up on mobile */
  .introduction.section-animate {
    transform: translateX(clamp(-50px, -5vw, -30px));
  }
  
  .introduction.section-visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* Advantage - Slide from right on desktop, fade up on mobile */
  .advantage.section-animate {
    transform: translateX(clamp(30px, 5vw, 50px));
  }
  
  .advantage.section-visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* Technology - Scale up */
  .technology.section-animate {
    transform: scale(0.98);
  }
  
  .technology.section-visible {
    opacity: 1;
    transform: scale(1);
  }

  /* Products - Staggered fade up */
  .products.section-animate .product-card {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .products.section-visible .product-card {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger delays for product cards - responsive adjustments */
